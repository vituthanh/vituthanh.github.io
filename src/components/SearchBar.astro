<div class="mx-auto hidden md:flex w-2/4">
  <form class="max-w-md mx-auto w-full">
    <label
      for="default-search"
      class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white"
    >Search</label>
    <div class="relative w-full search-container">
      <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <svg
          class="w-5 h-5 text-gray-500 dark:text-gray-400"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 20 20"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 19l-4-4m0-7a7 7 0 1 1-14 0 7 7 0 0 1 14 0z"
          ></path>
        </svg>
      </div>
      <input
        type="search"
        id="default-search"
        class="search-input block w-full pl-10 pr-20 py-2 border rounded-lg"
        placeholder=""
      />
      <button
        type="button"
        class="search-button text-white absolute right-2.5 top-1/2 transform -translate-y-1/2 font-medium rounded-lg text-sm px-4 py-2"
      >
        Tìm kiếm
      </button>
    </div>
  </form>
</div>

<style>
.search-button {
  background: var(--color-black);
}

.search-input {
  padding-inline-start: 2.5rem;
  padding-inline-end: 7rem;
  height: 3.375rem;
}
</style>